{
  "name": "alerting-platform",
  "version": "1.0.0",
  "description": "A lightweight alerting and notification platform with OOP design patterns",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "seed": "ts-node src/seed.ts",
    "clean": "rm -rf dist database.sqlite",
    "setup": "npm install && npm run seed && npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["alerts", "notifications", "typescript", "oop", "design-patterns"],
  "author": "Neha Dhruw",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-validator": "^2.20.33",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/node-cron": "^3.0.11",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
